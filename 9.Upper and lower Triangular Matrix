#include <stdio.h>

int main() {
    int a[10][10];
    int r, c;
    int isUpper = 1, isLower = 1;

    printf("Enter number of rows and columns: ");
    scanf("%d %d", &r, &c);

    // Check for square matrix
    if (r != c) {
        printf("Matrix must be a square matrix.\n");
        return 0;
    }

    printf("Enter matrix elements:\n");
    for (int i = 0; i < r; i++) {
        for (int j = 0; j < c; j++) {
            scanf("%d", &a[i][j]);
        }
    }

    // Check upper and lower triangular
    for (int i = 0; i < r; i++) {
        for (int j = 0; j < c; j++) {

            // Below main diagonal
            if (i > j && a[i][j] != 0)
                isUpper = 0;

            // Above main diagonal
            if (i < j && a[i][j] != 0)
                isLower = 0;
        }
    }

    if (isUpper)
        printf("The matrix is an Upper Triangular Matrix.\n");

    if (isLower)
        printf("The matrix is a Lower Triangular Matrix.\n");

    if (!isUpper && !isLower)
        printf("The matrix is neither Upper nor Lower Triangular.\n");

    return 0;
}
